extends layout

block content
	.inner
		form.form(action="/registerfr" method="POST")
			h2= title
			label(for="name") Nom
			input(type="text" name="name" )
			label(for="email") Email
			input(type="email" name="email" )
			label(for="password") Mot de passe
			input(type="password" name="password")
			label(for="password-confirm") Confirmez le mot de passe
			input(type="password" name="password-confirm")
			input.button(type="submit" value="Inscrivez Vous")