extends layout_fr

include mixins/_storeCard_fr

block content
	.inner
		h2 #{tag || 'Tags'}
		ul.tags
			each t in tags
				li.tag
					a.tag__link(href=`/tagsfr/${t._id}` class=(t._id === tag ? 'tag__link--active' : ''))
						span.tag__text= t._id
						span.tag__count= t.count

		.stores
			each store in stores
				+storeCardfr(store)

